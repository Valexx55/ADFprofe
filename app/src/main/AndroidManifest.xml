<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- declaro que mi app necesita conectarse a internet -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- mi app necesita acceder al estado de la red para saber si hay internet o no o de qué tipo -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- para lanzar notificaciones -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- para lanzar un servicio en foreground -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" /> <!-- para lanzar un servicio en foreground obligatorio en API 14 para especificar el tipo de servicio -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" /> <!-- para lanzar un servicio en foreground obligatorio en API 14 para especificar el tipo de servicio -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" /> <!-- indicamos que la app usa la cámara y con true o false si el dispositivo tiene que tener cámara obligatoriamente o no -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- permitimos que nuesta app se informe del inicio del dispositivo -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" /> <!-- dicen q no existe pero te quita el rojo en AS añado por siacaso necesario para poco -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- UTILIZAMOS EL GPS -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- USAMOS POSICIÓN APROX -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <queries>

        <!-- Declarar que quieres hacer consultas a aplicaciones de navegador -->
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <data android:host="http" />
        </intent>
        <!--
        <package android:name="com.android.chrome" />
        <package android:name="org.mozilla.firefox" />
        <package android:name="com.opera.browser" />
        -->
    </queries>
    <!--
 con esto, puede salir bloatware - software de relleno que aparece oculto en el listado de apps
    a partir de las versión 11, cuando lanzamos un intent implícito o listamos las apps, hay algunas
    que pueden ocultarse: con esto, hacemos que sean visibles
    pixel sin capa de personalización del fabricante: menos bloatware
    -->
